@using Microsoft.Extensions.Localization
@inject IStringLocalizer<G201210352.lang> lang
@model IEnumerable<G201210352.Models.Basket>

@{ ViewData["Title"] = lang["Baslik"].Value; }

<section class="static about-sec">
    <div class="container">
        <h1>@lang["BekleyenSiparisler"]</h1>
        <table id="orderTable" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerId)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>@lang["İslemler"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            <span style="margin-right:10px;">@Html.DisplayFor(modelItem => item.ApplicationUser.Name)</span>
                            <span style="margin-right:10px;">@Html.DisplayFor(modelItem => item.ApplicationUser.LastName)</span>
                        </td>
                        <td>
                            <span>@lang["Durum"]</span>
                        </td>
                        <td style="display:flex;">
                            <a style="padding: 5px;width: 50%;" asp-action="ChangeSituation" asp-route-id="@item.Id"><input type="submit" value="@lang["Kargo"]" class="btn btn-block btn-primary" /></a>
                            <a style="padding: 5px;width: 50%;" asp-action="BasketDetails" asp-route-id="@item.Id"><input type="submit" value="@lang["Detaylar"]" class="btn btn-block btn-primary" /></a>
                        </td>
                    </tr>
}
            </tbody>
        </table>
    </div>
</section>


