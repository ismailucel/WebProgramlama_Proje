@using Microsoft.Extensions.Localization
@inject IStringLocalizer<G201210352.lang> lang
@model IEnumerable<G201210352.Models.Song>

@{ ViewData["Title"] = "Emusic"; }

<section class="static about-sec">
    <div class="container-fluid">
        <h1>@lang["Ekle"]</h1>
        <form asp-controller="Songs" asp-action="Create" style=" margin-bottom: 10px;" method="get">
            <button type="submit" class="btn btn-primary">@lang["Ekle"]</button>
        </form>
        <table id="bookTable" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SongName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PublishYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryId)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.LanguageId)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.ArtistId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SongName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublishYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        @*<td>
                @Html.DisplayFor(modelItem => item.Language.Name)
            </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Artist.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        @if (item.Active == true)
        {
<td><span>@lang["Aktif"]</span></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-window-close"></i></a>
                    </td>
 }
                else
                {
<td><span>@lang["Dektif"]</span></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-check-square"></i></a>
                    </td>
}
    </tr>
}
            </tbody>
        </table>
    </div>
</section>
